<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="StudentManagement.Views.LoginView">
    <StackPanel Margin="325">
        <TextBox Watermark="Username" Margin="15" Width="300" Text="{Binding Username}"/>
        <TextBox Watermark="Password" Width="300" PasswordChar="*" Text="{Binding Password}"/>
        <Button Width="300" HorizontalContentAlignment="Center" Margin="30" HorizontalAlignment="Center"
                Command="{Binding LogIn}">
            LOGIN
        </Button>
        <Label HorizontalAlignment="Center" Content="{Binding ErrorLabel}"></Label>

    </StackPanel>
</UserControl>