<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="StudentManagement.Views.AddTeacherView">

    <StackPanel>
        <TextBox Watermark="First name" Text="{Binding FirstName}" />
        <TextBox Watermark="Last name" Text="{Binding LastName}" />
        <ComboBox PlaceholderText="Subject" HorizontalAlignment="Center" SelectedItem="{Binding Subject}" Items="{Binding Subjects}" />
        <Button Height="50" Width="100" Command="{Binding AddTeacher}">
            ADD
        </Button>
    </StackPanel>
</UserControl>