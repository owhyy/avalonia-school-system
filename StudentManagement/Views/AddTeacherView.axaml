<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="StudentManagement.Views.AddTeacherView">

    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="5">
        <TextBox Watermark="First name" Width="600" Height="50" Text="{Binding FirstName}" />
        <TextBox Watermark="Last name" Width="600" Height="50" Text="{Binding LastName}" />
        <ComboBox PlaceholderText="Subject" HorizontalAlignment="Center" Margin="20 0" Width="600" Height="50"
                  SelectedItem="{Binding Subject}" Items="{Binding Subjects}" />
        <Button HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="50" Width="100"
                HorizontalAlignment="Center" VerticalAlignment="Center" Command="{Binding AddTeacher}">
            ADD
        </Button>
    </StackPanel>
</UserControl>